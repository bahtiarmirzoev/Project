        <Button Width="300" Background="Orange" Margin="250,163,250,255" HorizontalAlignment="Center" VerticalAlignment="Center">Order tracking</Button>


        <Button Width="300" Background="Orange" RenderTransformOrigin="0.493,-0.507" HorizontalAlignment="Center" VerticalAlignment="Center">Cancel order</Button>


        <Button Width="300" Background="Orange" Margin="0,257,0,0" HorizontalAlignment="Center" VerticalAlignment="Top" RenderTransformOrigin="0.477,-0.771">User Information</Button>


